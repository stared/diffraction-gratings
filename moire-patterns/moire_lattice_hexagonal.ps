/mm {2.835 mul} def

/radius 0.2 mm def
/const 0.5 mm def

/timesX 200 def
/timesY 200 def

/leter (A) def

/Lattice{
	/indX 0 def
	timesX{
		/indY 0 def
		timesY{
			spacingX indX mul spacingY indY mul radius 0 360 arc
			fill
			/indY indY 1 add def
		} repeat
		/indX indX 1 add def
	} repeat
} def

/LatticeHex{
	/spacingX const def
	/spacingY 3 sqrt const mul def
	Lattice
	const 2 div 3 sqrt const mul 2 div translate
	Lattice
	0 const 2 div 3 sqrt sub 0 const mul 2 div sub translate
} def

/Write{
	/Courier findfont
	10 scalefont
	setfont
	0 0 10 sub moveto
	label
	show
} def


/mm {2.835 mul} def

/radius 0.2 mm def
/spacingX 0.5 mm def
/spacingY 0.5 mm def

/timesX 200 def
/timesY 200 def

/Lattice{
	/indX 0 def
	timesX{
		/indY 0 def
		timesY{
			spacingX indX mul spacingY indY mul radius 0 360 arc
			fill
			/indY indY 1 add def
		} repeat
		/indX indX 1 add def
	} repeat
} def

/Write{
	/Courier findfont
	10 scalefont
	setfont
	0 0 10 sub moveto
	label
	show
} def

